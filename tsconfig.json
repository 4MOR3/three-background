{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "declaration": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "outDir": "es"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
}